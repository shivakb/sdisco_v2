@using TepayLink.Sdisco.Authorization
@using TepayLink.Sdisco.Web.Areas.Admin.Models.BookingDetails
@using TepayLink.Sdisco.Web.Areas.Admin.Startup
@model BookingDetailsViewModel
@{
    ViewBag.CurrentPageName = AdminPageNames.Common.BookingDetails;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Admin/Views/BookingDetails/Index.js" asp-append-version="true"></script>
}

 <div class="kt-subheader kt-grid__item">
  
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <span>@L("BookingDetails")</span>
        </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <span class="kt-subheader__desc">
            @L("BookingDetailsHeaderInfo")
        </span>
    </div>
    <div class="kt-subheader__toolbar">
        <div class="kt-subheader__wrapper">
            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_Administration_BookingDetails_Create))
            {
                <button id="CreateNewBookingDetailButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewBookingDetail")</button>
            }
        </div>
    </div>
  
</div>
<div class="kt-content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="BookingDetailsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetBookingDetailsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinRefundAmountFilterId">@L("MinMax") @L("RefundAmount")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minRefundAmountFilter" id="MinRefundAmountFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxRefundAmountFilter"  id="MaxRefundAmountFilterId"/>
									</div>
                                </div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="ProductNameFilterId">(@L("Product")) @L("Name")</label>
									<input type="text" class="form-control" name="productNameFilter" id="ProductNameFilterId">
								</div>
                            </div>

                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="BookingDetailsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("BookingId")</th>
								<th>@L("StartDate")</th>
								<th>@L("EndDate")</th>
								<th>@L("TripLength")</th>
								<th>@L("Status")</th>
								<th>@L("ProductScheduleId")</th>
								<th>@L("Quantity")</th>
								<th>@L("Amount")</th>
								<th>@L("Fee")</th>
								<th>@L("HostPaymentStatus")</th>
								<th>@L("HostUserId")</th>
								<th>@L("BookingUserId")</th>
								<th>@L("IsDone")</th>
								<th>@L("AffiliateUserId")</th>
								<th>@L("RoomId")</th>
								<th>@L("Note")</th>
								<th>@L("CancelDate")</th>
								<th>@L("RefundAmount")</th>
								<th>@L("ProductName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  
</div>