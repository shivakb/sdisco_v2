
@using System.Globalization
@using TepayLink.Sdisco.Web.Areas.Admin.Models.Common.Modals
@using TepayLink.Sdisco.Web.Areas.Admin.Models.SimilarProducts
@model CreateOrEditSimilarProductModalViewModel

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditSimilarProduct")) : L("CreateNewSimilarProduct")))

<div class="modal-body">
        <div id="SimilarProductInformationsTab">
            <form name="SimilarProductInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.SimilarProduct.Id" />
                }

				            
								<div class="form-group m-form__group">
										<label for="ProductName">@L("Product")</label>
									    <div class="input-group">
											<input class="form-control" id="ProductName" name="productName" value="@Model.ProductName" type="text" disabled>
										<div class="input-group-append">
											<button class="btn btn-primary blue" id="OpenProductLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
										</div> 
										<div class="input-group-prepend">
											<button class="btn btn-danger btn-icon" type="button" id="ClearProductNameButton"><i class="fa fa-times"></i></button>
										</div>
									</div>
								</div>

								@if (Model.IsEditMode)
								{
									<input class="form-control" id="SimilarProduct_ProductId" value="@Model.SimilarProduct.ProductId" type="text" name="productId"  hidden/>
								}
								 else
								{ 
									<input class="form-control" id="SimilarProduct_ProductId" value="" type="text" name="productId"  hidden/>
								}

            
								<div class="form-group m-form__group">
										<label for="ProductName2">@L("Product")</label>
									    <div class="input-group">
											<input class="form-control" id="ProductName2" name="productName2" value="@Model.ProductName2" type="text" disabled>
										<div class="input-group-append">
											<button class="btn btn-primary blue" id="OpenProduct2LookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
										</div> 
										<div class="input-group-prepend">
											<button class="btn btn-danger btn-icon" type="button" id="ClearProductName2Button"><i class="fa fa-times"></i></button>
										</div>
									</div>
								</div>

								@if (Model.IsEditMode)
								{
									<input class="form-control" id="SimilarProduct_SimilarProductId" value="@Model.SimilarProduct.SimilarProductId" type="text" name="similarProductId"  hidden/>
								}
								 else
								{ 
									<input class="form-control" id="SimilarProduct_SimilarProductId" value="" type="text" name="similarProductId"  hidden/>
								}



				

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
