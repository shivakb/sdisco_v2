
@using System.Globalization
@using TepayLink.Sdisco.Web.Areas.Admin.Models.Common.Modals
@using TepayLink.Sdisco.Web.Areas.Admin.Models.ClaimReasons
@model CreateOrEditClaimReasonModalViewModel

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditClaimReason")) : L("CreateNewClaimReason")))

<div class="modal-body">
        <div id="ClaimReasonInformationsTab">
            <form name="ClaimReasonInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.ClaimReason.Id" />
                }

				

				
								<div class="form-group">
									<label for="ClaimReason_Title">@L("Title")</label>
									<input class="form-control" id="ClaimReason_Title" value="@Model.ClaimReason.Title" type="text" name="title"     />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
