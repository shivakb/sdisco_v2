@using TepayLink.Sdisco.Authorization
@using TepayLink.Sdisco.Web.Areas.Admin.Models.Currencies
@using TepayLink.Sdisco.Web.Areas.Admin.Startup
@model CurrenciesViewModel
@{
    ViewBag.CurrentPageName = AdminPageNames.Common.Currencies;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Admin/Views/Currencies/Index.js" asp-append-version="true"></script>
}

 <div class="kt-subheader kt-grid__item">
  
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <span>@L("Currencies")</span>
        </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <span class="kt-subheader__desc">
            @L("CurrenciesHeaderInfo")
        </span>
    </div>
    <div class="kt-subheader__toolbar">
        <div class="kt-subheader__wrapper">
            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_Administration_Currencies_Create))
            {
                <button id="CreateNewCurrencyButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewCurrency")</button>
            }
        </div>
    </div>
  
</div>
<div class="kt-content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="CurrenciesTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetCurrenciesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="NameFilterId">@L("Name")</label>
									<input type="text" class="form-control" name="nameFilter" id="NameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="DisplayNameFilterId">@L("DisplayName")</label>
									<input type="text" class="form-control" name="displayNameFilter" id="DisplayNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="IconFilterId">@L("Icon")</label>
									<input type="text" class="form-control" name="iconFilter" id="IconFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="CurrencySignFilterId">@L("CurrencySign")</label>
									<input type="text" class="form-control" name="currencySignFilter" id="CurrencySignFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<label for="IsDisabledFilterId">@L("IsDisabled")</label>
								<select class="form-control" name="IsDisabledFilter" id="IsDisabledFilterId">
									<option value="-1">@L("All")</option>
									<option value="0">@L("False")</option>
									<option value="1">@L("True")</option>
								</select>
                            </div>

                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="CurrenciesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("Name")</th>
								<th>@L("DisplayName")</th>
								<th>@L("Icon")</th>
								<th>@L("CurrencySign")</th>
								<th>@L("IsDisabled")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  
</div>