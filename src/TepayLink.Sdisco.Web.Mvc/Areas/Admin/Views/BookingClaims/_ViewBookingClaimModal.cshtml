
@using TepayLink.Sdisco.Web.Areas.Admin.Models.Common.Modals
@using TepayLink.Sdisco.Web.Areas.Admin.Models.BookingClaims
@model BookingClaimViewModel

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="BookingClaimInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("BookingDetailId") :</h6>
                @Model.BookingClaim.BookingDetailId
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("ClaimReason")) @L("Title") :</h6>
                @Model.ClaimReasonTitle
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithClose.cshtml")

