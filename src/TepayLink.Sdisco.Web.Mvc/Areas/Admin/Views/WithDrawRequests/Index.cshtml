@using TepayLink.Sdisco.Authorization
@using TepayLink.Sdisco.Web.Areas.Admin.Models.WithDrawRequests
@using TepayLink.Sdisco.Web.Areas.Admin.Startup
@model WithDrawRequestsViewModel
@{
    ViewBag.CurrentPageName = AdminPageNames.Common.WithDrawRequests;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Admin/Views/WithDrawRequests/Index.js" asp-append-version="true"></script>
}

 <div class="kt-subheader kt-grid__item">
  
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <span>@L("WithDrawRequests")</span>
        </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <span class="kt-subheader__desc">
            @L("WithDrawRequestsHeaderInfo")
        </span>
    </div>
    <div class="kt-subheader__toolbar">
        <div class="kt-subheader__wrapper">
            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_Administration_WithDrawRequests_Create))
            {
                <button id="CreateNewWithDrawRequestButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewWithDrawRequest")</button>
            }
        </div>
    </div>
  
</div>
<div class="kt-content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="WithDrawRequestsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetWithDrawRequestsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinUserIdFilterId">@L("MinMax") @L("UserId")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minUserIdFilter" id="MinUserIdFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxUserIdFilter"  id="MaxUserIdFilterId"/>
									</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinAmountFilterId">@L("MinMax") @L("Amount")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minAmountFilter" id="MinAmountFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxAmountFilter"  id="MaxAmountFilterId"/>
									</div>
                                </div>
                            </div>
							<div class="col-md-3">
								<label for="StatusFilterId">@L("Status")</label>
								<select class="form-control" name="StatusFilter" id="StatusFilterId">
								<option value="-1">@L("All")</option>
																			<option value="0">@L("Enum_WithDrawRequestStatus_0")</option>

										<option value="1">@L("Enum_WithDrawRequestStatus_1")</option>

										<option value="2">@L("Enum_WithDrawRequestStatus_2")</option>

										<option value="3">@L("Enum_WithDrawRequestStatus_3")</option>


								</select>
                            </div>
                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinTransactionIdFilterId">@L("MinMax") @L("TransactionId")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minTransactionIdFilter" id="MinTransactionIdFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxTransactionIdFilter"  id="MaxTransactionIdFilterId"/>
									</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinBankAccountIdFilterId">@L("MinMax") @L("BankAccountId")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minBankAccountIdFilter" id="MinBankAccountIdFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxBankAccountIdFilter"  id="MaxBankAccountIdFilterId"/>
									</div>
                                </div>
                            </div>

                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="WithDrawRequestsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("UserId")</th>
								<th>@L("Amount")</th>
								<th>@L("Status")</th>
								<th>@L("TransactionId")</th>
								<th>@L("BankAccountId")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  
</div>