
@using TepayLink.Sdisco.Web.Areas.Admin.Models.Common.Modals
@using TepayLink.Sdisco.Web.Areas.Admin.Models.ProductImages
@model ProductImageViewModel

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="ProductImageInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Url") :</h6>
                @Model.ProductImage.Url
            </div>
            <div class="col-6 mb-3">
                <h6>@L("ImageType") :</h6>
                @L("Enum_ImageType_" + (int)Model.ProductImage.ImageType)
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Tag") :</h6>
                @Model.ProductImage.Tag
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Title") :</h6>
                @Model.ProductImage.Title
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Product")) @L("Name") :</h6>
                @Model.ProductName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Common/Modals/_ModalFooterWithClose.cshtml")

